{
  "name": "@silevis/reactgrid",
  "description": "Add spreadsheet-like behavior to your React app.",
  "version": "3.1.10-rc.39",
  "homepage": "https://reactgrid.com",
  "license": "MIT",
  "author": "Silevis Software",
  "repository": {
    "type": "git",
    "url": "https://github.com/silevis/reactgrid.git"
  },
  "keywords": [
    "react",
    "reactgrid",
    "spreadsheet",
    "datagrid",
    "datatable"
  ],
  "main": "reactgrid.js",
  "typings": "reactgrid.d.ts",
  "devDependencies": {
    "@cypress/snapshot": "^2.1.7",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-select": "^3.0.27",
    "cross-env": "^7.0.3",
    "cypress": "^6.1.0",
    "cypress-plugin-tab": "^1.0.5",
    "git-branch-is": "^4.0.0",
    "husky": "^4.3.5",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "npm-version-suffix": "^0.2.0",
    "react-scripts": "^4.0.1",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {
    "react-select": "^3.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:tsc": "rm -rf ./dist && tsc -p tsconfig.prod.json",
    "copy:assets": "cp -r src/*.scss dist",
    "build:assets": "node-sass src/styles.scss --output dist",
    "copy:package.json": "cp -r package.json dist",
    "copy:theming-test.scss": "cp -r src/test/theming-test.scss dist/test",
    "copy:README.md": "cp -r README.md dist",
    "copy:LICENSE": "cp -r LICENSE dist",
    "copy:.npmignore": "cp -r .npmignore dist",
    "copy:tests": "mkdir -p dist/cypress/integration && cp -r cypress/integration dist/cypress",
    "copy:flag-cell-style.scss": "cp -r src/test/flagCell/flag-cell-style.scss dist/test/flagCell",
    "pre-deploy": "npm-run-all build:tsc copy:assets build:assets copy:package.json copy:theming-test.scss copy:flag-cell-style.scss copy:README.md copy:LICENSE copy:tests copy:.npmignore",
    "deploy": "npm publish dist --access=public && echo 'Finished publishing NPM package'",
    "test:cypress": "npx cypress open",
    "run:all:tests": "run-p --print-label cy:**",
    "cy:standard": "npx cypress run --headless --quiet --browser firefox -s 'cypress/integration/tests/standard/*'",
    "cy:sticky": "npx cypress run --headless --quiet --browser firefox -s 'cypress/integration/tests/sticky/*'",
    "cy:additionalContent": "npx cypress run --headless --quiet --browser firefox -s 'cypress/integration/tests/additionalContent/*'",
    "cy:frozenFocus": "npx cypress run --headless --quiet --browser firefox -s 'cypress/integration/tests/frozenFocus/*'",
    "cy:headerRow": "npx cypress run --headless --quiet --browser firefox -s 'cypress/integration/tests/headerRow/*'",
    "cy:pinnedToBody": "npx cypress run --headless --quiet --browser firefox -s 'cypress/integration/tests/pinnedToBody/*'",
    "cy:stickyPinnedToBody": "npx cypress run --headless --quiet --browser firefox -s 'cypress/integration/tests/stickyPinnedToBody/*'",
    "remove-suffix": "cross-env SUFFIX=rc node ./node_modules/npm-version-suffix/run-remove-suffix.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "if git-branch-is develop; then npm run run:all:tests; fi",
      "pre-commit": "if git-branch-is develop; then echo 'Running pre-commit'; fi"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "cy": true,
      "Cypress": true,
      "context": true
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead"
  ]
}
